<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.withearth.tumbler.dao.CafeDao">


	<!--DB와 이름 맞추기 -->
	<resultMap id="CafeResultMap"
	     type="com.withearth.tumbler.domain.Cafe">

		<id property="cafe_idx" column="cafe_idx" />
		<result property="cafe_name" column="cafe_name" />
		<result property="location" column="location" />
		<result property="qrcode" column="qrcode" />

	</resultMap>
	
	<!-- 로그인 -->
	<select id="selectTumLogin" resultMap="CafeResultMap">
		select * from member where id=#{param1} and pw=#{param2}
	</select>
	

	<insert id="insertQRcode"
		parameterType="com.withearth.tumbler.domain.Cafe"
		useGeneratedKeys="true" 
		keyProperty="idx">
		
		insert into cafe

	</insert>

	<!-- 카페 전체 리스트 -->



 <!-- (cafe_idx, cafe_name, location, qrcode, idx)
        values(#{cafe_idx}, #{cafe_name}, #{location}, #{qrcode}, #{idx}) -->













</mapper>